@using JK.Web.Views.Shared.Components.SideBarUserArea
@model SideBarUserAreaViewModel
@if (Model.LoginInformations != null && Model.LoginInformations.User != null)
{
    <li class="dropdown">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
            <i></i>
            <span>@Html.Raw(Model.GetShownLoginName())</span>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu pull-right">
            <li>
                <a id="btnChangePassword">
                    <i class="material-icons">lock</i>
                    修改密码
                </a>
            </li>
            <li>
                <a id="btnTwoFactorLogin">
                    <i class="material-icons">security</i>
                    帐号安全
                </a>
            </li>
            <li>
                <a href="@Url.Action("Logout", "Account", new { area = string.Empty })">
                    <i class="material-icons">exit_to_app</i>
                    @L("Logout")
                </a>
            </li>
        </ul>
    </li>
}