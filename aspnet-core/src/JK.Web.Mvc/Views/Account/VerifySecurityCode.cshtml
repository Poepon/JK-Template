@model JK.Web.Models.Account.VerifySecurityCodeViewModel
@section Scripts
    {
    <script src="~/view-resources/Views/Account/VerifySecurityCode.js" asp-append-version="true"></script>
}
<div class="card">
    <div class="header">
        <h3 class="m-login__title">
            @L("VerifySecurityCode")
        </h3>
    </div>
    <div class="body">
        <form class="verify-security-code-form" asp-action="VerifySecurityCode" method="post">
            <p>@L("VerifySecurityCode_Information")</p>
            @Html.Hidden("returnUrl", Model.ReturnUrl)
            @Html.Hidden("provider", Model.Provider)
            @Html.Hidden("rememberMe", Model.RememberMe)

            <div class="form-group">
                <div class="form-line">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", required = "required", placeholder = Model.Code })
                </div>
            </div>
            @if (Model.IsRememberBrowserEnabled)
            {
                <div class="form-group margin-top-20">
                    <div class="form-line">
                        @Html.CheckBoxFor(m => m.RememberBrowser)
                        <label for="RememberBrowser">@L("RememberThisBrowser")</label>
                    </div>
                </div>
            }
            <div>
                <input type="submit" id="btnSubmit" class="btn btn-primary" value="@L("Submit")" />
            </div>
        </form>
    </div>
</div>